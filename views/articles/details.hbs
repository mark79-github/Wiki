<main>
    <h1>Welcome to SoftUni Wiki!</h1>
    <div class="spacer">
        <h2>{{title}}
            <div class="controls">
                <a href="/articles/edit/{{_id}}">[edit]</a>
                {{#if isCreator}}
                    <a href="/articles/delete/{{_id}}">[delete]</a>
                {{/if}}
            </div>
        </h2>
        <article>
            {{#each description}}
                <p>{{this}}</p>
            {{/each}}
        </article>
    </div>
</main>